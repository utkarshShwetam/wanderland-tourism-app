<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDashBackground"
    android:padding="50dp"
    tools:context=".LoginSignUp.LogOutActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="@string/log_out_screen_msg"
        android:textColor="@color/colorText"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="30dp"
        android:onClick="OnContinueClickLogOut"
        android:background="@drawable/blue_rounded_button"
        android:fontFamily="@font/roboto"
        android:text="Continue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnCancelClickLogOut"
        android:layout_below="@id/sign_out_continue_button"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_rounded_button"
        android:fontFamily="@font/roboto"
        android:text="Cancel" />


</RelativeLayout>