<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wanderland.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".BookingHistory.BookingHistoryActivity"></activity>
        <activity android:name=".TransactionHistory.TransactionHistoryActivity" />
        <activity android:name=".SavedCards.SavedCard" />
        <activity android:name=".Booking.BookingStartTransactionActivity" />
        <activity
            android:name=".Booking.BookingActivity"
            android:noHistory="true" />
        <activity android:name=".Details.PackageDetailsActivity" />
        <activity android:name=".LoginSignUp.LogOutActivity" />
        <activity android:name=".DashBoard.ViewAllPlaces" />
        <activity android:name=".LoginSignUp.RegisterUserActivity" />
        <activity android:name=".LoginSignUp.LoginActivity" />
        <activity android:name=".DashBoard.MainDashboard" />
        <activity android:name=".SplashScreen.WalkThroughActivity" />
        <activity
            android:name=".SplashScreen.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>